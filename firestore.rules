rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    // Note: This checks the requesting user's own document for isAdmin flag
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Users collection - users can only read/write their own user document
    // Allow unauthenticated reads for handle uniqueness checks during signup
    // Admins can update any user document (for approval)
    match /users/{userId} {
      allow read: if true; // Allow reads for handle uniqueness checks
      allow create: if isAuthenticated() && request.auth.uid == userId; // Users can create their own document
      allow update: if isOwner(userId) || isAdmin(); // Users can update own, admins can update any
      allow delete: if isOwner(userId) || isAdmin(); // Users can delete own, admins can delete any
    }

    // Tracks collection - users can only access their own tracks
    match /tracks/{trackId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Playlists collection - users can only access their own playlists
    match /playlists/{playlistId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // ProcessedTracks collection - users can only access their own processed tracks
    match /processedTracks/{processedTrackId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // UserApiKeys collection - users can only access their own API keys
    match /userApiKeys/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}

